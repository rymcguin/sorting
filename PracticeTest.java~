public class Methods {
  public static void main(String [] args){
   int [] x = {1,2,3,4,5,6,7,8,9};
   int newSize = 20;
   int [] newArray = new int[newSize];
   if(newSize <= x.length){
    for(int i = 0; i < newArray.length; i++){
      newArray[i] = x[i];
    }
   }else (newSize > x.length){
    for(int i = 0; i < newSize; i++){
      if(i < x.length){
        newArray[i] = x[i];
      }else{
        newArray[i] = 0;
    }
   }
   }
}
